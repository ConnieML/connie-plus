# Okta Configuration
NEXT_PUBLIC_OKTA_ISSUER=https://your-okta-domain.okta.com/oauth2/default
NEXT_PUBLIC_OKTA_CLIENT_ID=your-client-id
NEXT_PUBLIC_OKTA_REDIRECT_URI=https://v1.connie.plus/callback

# Security Configuration (IMPORTANT!)
NEXT_PUBLIC_ALLOWED_PARENT_ORIGIN=https://flex.twilio.com
NEXT_PUBLIC_FLEX_DOMAIN=https://portal.connie.team

# Optional: For different environments
# NEXT_PUBLIC_OKTA_ISSUER=https://dev-123456.okta.com/oauth2/default
# NEXT_PUBLIC_OKTA_CLIENT_ID=0oa1234567890abcdef
# NEXT_PUBLIC_OKTA_REDIRECT_URI=http://localhost:3000/callback
# NEXT_PUBLIC_ALLOWED_PARENT_ORIGIN=http://localhost:3001

# AWS Configuration (for Secrets Manager)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Twilio Configuration (for development/fallback only)
TWILIO_ACCOUNT_SID=your_default_account_sid
TWILIO_AUTH_TOKEN=your_default_auth_token